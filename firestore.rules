
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Game Rooms
    // In a production app, you might restrict this further, but for a party game
    // we allow any connected client to read/write the game state.
    match /games/{roomCode} {
      allow read, write: if true;
    }

    // User Stats & Profiles
    match /users/{userId} {
      // Public profiles (for leaderboard/viewing others)
      allow read: if true;
      // Only the user themselves can update their stats/profile
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User Awards Subcollection
      match /awards/{awardId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global Game History
    match /game_history/{gameId} {
      allow read: if true;
      allow create: if true; // Clients write history on game end
      allow update, delete: if false; // History is immutable
    }
  }
}
